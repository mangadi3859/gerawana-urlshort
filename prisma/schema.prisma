generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    //DATABASE_URL="mysql://root:@localhost:3306/gerawana-shortener"
    url      = env("DATABASE_URL")
}

model User {
    id       Int    @id @default(autoincrement())
    username String
    email    String
    password String
}

model Session {
    token      String   @id
    expires_at DateTime @default(now())
}

model ShortLink {
    id       Int    @id @default(autoincrement())
    redirect String
    link     String
}
